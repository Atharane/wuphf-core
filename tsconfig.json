{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2018",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "cheerio": ["./node_modules/cheerio/lib/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
